Попов Артем, 3 Вариант.

За подмножество паскаля я взял типы boolean, integer, string, операция присвоения, цикл while, условное выражение if, функции read, write

Для генерации парсера используется ANTLR(pascalGrammar.g4)

пример ввода:

program Primer;
var
   x, y, z, i: integer;
   a, b, c: string;
begin
   y := (1 + 2 * 3);
   z := -2;
   x := (y * z + 23123 mod 6 + 16 div 2);
   a := 'abc';
   read(b, c);
   i := 10;
   while i > 0 do
   begin
      i := i - 1;
      write(i);
   end;
   if x > z then
      write('abc')
   else
      write(a);
end.


пример вывода:

void main() {
	int x, y, z, i;
	char* a, b, c;
	y = (1 + 2 * 3);
	z = -2;
	x = (y * z + 23123 % 6 + 16 / 2);
	a = "abc";
	scanf("%s %s", &b, &c);
	i = 10;
	while (i > 0)
	{
		i = i - 1;
		printf("%d", i);
		;

	}
;
	if (x > z)
	printf("abc")
	else
	printf("%s", a);
	;
}
